@page
@model IndexModel
@{
    ViewData["Title"] = "My Favorite Song";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to right, #1e3c72, #2a5298);
            color: white;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        h1 {
            font-size: 3em;
            margin-top: 50px;
            transition: transform 0.5s ease-in-out;
        }

        .video-container {
            margin: 50px auto;
            max-width: 800px;
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
        }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        }
    </style>
</head>
<body>

    <h1 id="animated-title">Vibes 🎶</h1>

    <div class="video-container">
        <!-- Embed a favorite YouTube music video -->
        <iframe width="560" height="315" src="https://www.youtube.com/embed/jxMR1L8cnr0?si=aXJxwdHH4tHdx8hv" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>

    <script>
        // JavaScript Animation: Looping H1 bounce
        const title = document.getElementById("animated-title");
        let scale = 1;
        let growing = true;

        function animateTitle() {
            if (growing) {
                scale += 0.01;
                if (scale >= 1.6) growing = false;
            } else {
                scale -= 0.01;
                if (scale <= 1.0) growing = true;
            }

            title.style.transform = `scale(${scale})`;
            requestAnimationFrame(animateTitle);
        }

        animateTitle();
    </script>

</body>
</html>
